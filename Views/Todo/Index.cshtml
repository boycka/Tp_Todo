@using System.Linq
@model IEnumerable<Tp_TODO.ViewModels.TodoVm>

@{
    ViewData["Title"] = "Todos";
}

<div class="max-w-6xl mx-auto">

    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
        <div>
            <h1 class="text-2xl font-bold text-gray-800">My Todos</h1>
            <p class="text-sm text-gray-500 mt-1">
                Manage your tasks efficiently
            </p>
        </div>

        <a asp-action="Creat"
           class="mt-4 sm:mt-0 inline-flex items-center gap-2
                  bg-blue-600 text-white px-4 py-2 rounded-lg
                  font-medium hover:bg-blue-700 transition">
            <i class="fa-solid fa-plus"></i>
            New Todo
        </a>
    </div>

    <!-- Table Card -->
    <div class="bg-white rounded-2xl shadow overflow-hidden">

        <div class="overflow-x-auto">
            <table class="min-w-full text-sm">
                <thead class="bg-gray-50 border-b">
                    <tr class="text-left text-gray-600 font-semibold">
                        <th class="px-6 py-4">Libelle</th>
                        <th class="px-6 py-4">Description</th>
                        <th class="px-6 py-4">Status</th>
                        <th class="px-6 py-4">Due Date</th>
                        <th class="px-6 py-4 text-right">Actions</th>
                    </tr>
                </thead>

                <tbody class="divide-y">
                    @if (Model != null && Model.Any())
                    {
                        var indexed = Model.Select((item, idx) => new { item, idx });
                        foreach (var x in indexed)
                        {
                            <tr class="hover:bg-gray-50 transition">

                                <td class="px-6 py-4 font-medium text-gray-800">
                                    @x.item.Libelle
                                </td>

                                <td class="px-6 py-4 text-gray-600">
                                    @x.item.Description
                                </td>

                                <td class="px-6 py-4">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold
                                                @(x.item.State == Tp_TODO.Enums.State.Done
                                                                                      ? "bg-green-100 text-green-700"
                                                                                      : "bg-yellow-100 text-yellow-700")">
                                        @x.item.State
                                    </span>
                                </td>

                                <td class="px-6 py-4 text-gray-600">
                                    @x.item.DateLimite.ToString("dd/MM/yyyy")
                                </td>

                                <!-- Actions -->
                                <td class="px-6 py-4">
                                    <div class="flex justify-end gap-3">

                                        <!-- Show -->
                                        <a asp-action="Show"
                                           asp-route-id="@x.idx"
                                           class="text-blue-600 hover:text-blue-800 transition"
                                           title="View">
                                            <i class="fa-solid fa-eye"></i>
                                        </a>

                                        <!-- Edit -->
                                        <a asp-action="Edit"
                                           asp-route-id="@x.idx"
                                           class="text-yellow-500 hover:text-yellow-700 transition"
                                           title="Edit">
                                            <i class="fa-solid fa-pen"></i>
                                        </a>

                                        <!-- Delete -->
                                        <form asp-action="Delete"
                                              asp-route-id="@x.idx"
                                              method="post"
                                              onsubmit="return confirm('Are you sure you want to delete this todo?')">
                                            <button type="submit"
                                                    class="text-red-600 hover:text-red-800 transition"
                                                    title="Delete">
                                                <i class="fa-solid fa-trash"></i>
                                            </button>
                                        </form>

                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="px-6 py-10 text-center text-gray-500">
                                <div class="flex flex-col items-center gap-2">
                                    <i class="fa-solid fa-list-check text-3xl text-gray-400"></i>
                                    <span>No todos found</span>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
