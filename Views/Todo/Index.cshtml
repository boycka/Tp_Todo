@model IEnumerable<Tp_TODO.ViewModels.TodoVm>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Libelle</th>
            <th>Description</th>
            <th>State</th>
            <th>Date Limite</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Libelle</td>
                    <td>@item.Description</td>
                    <td>@item.State</td>
                    <td>@item.DateLimite.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No todos found</td>
            </tr>
        }
    </tbody>
</table>
