@model Tp_TODO.ViewModels.UserVM
@{
    ViewData["Title"] = "Login";
}

<div class="flex items-center justify-center min-h-[calc(100vh-120px)] px-4">

    <div class="w-full max-w-md bg-white rounded-2xl shadow-xl p-8">

        <!-- Logo / Title -->
        <div class="text-center mb-6">
            <h1 class="text-2xl font-bold text-gray-800">Sign in</h1>
            <p class="text-sm text-gray-500 mt-1">
                Access your account
            </p>
        </div>

        <form asp-action="Login" method="post" class="space-y-5">

            <div asp-validation-summary="ModelOnly"
                 class="text-sm text-red-600"></div>

            <!-- Login -->
            <div>
                <label asp-for="Login"
                       class="block text-sm font-medium text-gray-700 mb-1"></label>

                <input asp-for="Login"
                       class="w-full rounded-lg border border-gray-300 px-4 py-2.5
                              focus:ring-2 focus:ring-blue-500 focus:border-blue-500
                              outline-none transition" />

                <span asp-validation-for="Login"
                      class="text-xs text-red-500 mt-1 block"></span>
            </div>

            <!-- Password -->
            <div>
                <label asp-for="Password"
                       class="block text-sm font-medium text-gray-700 mb-1"></label>

                <input asp-for="Password" type="password"
                       class="w-full rounded-lg border border-gray-300 px-4 py-2.5
                              focus:ring-2 focus:ring-blue-500 focus:border-blue-500
                              outline-none transition" />

                <span asp-validation-for="Password"
                      class="text-xs text-red-500 mt-1 block"></span>
            </div>

            <!-- Button -->
            <button type="submit"
                    class="w-full bg-blue-600 text-white py-2.5 rounded-lg
                           font-semibold hover:bg-blue-700
                           focus:ring-2 focus:ring-blue-500 focus:ring-offset-2
                           transition">
                Sign in
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
